{% extends 'base.html.twig' %}

{% block title %}Tabligh{% endblock %}

{% block content %}
    <div id="page-inner">   
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-4">DEPARTEMENT TABLIGH</div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                    <a href="{{ path('app_dashboard_tabligh_create') }}" class="btn btn-primary" style="float: right; font-size: x-small;">Ajouter Tabligh</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive" >
                <table class="table table-striped table-bordered table-hover" style="font-size: 10px">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Avez vous été au madressa ?</th>
                        <th>Jusqu'à quelle classe ?</th>
                        <th>Est ce vos enfants fréquentent le madressa ?</th>
                        <th>Quelles sont vos fréquentations de la mosquée ?</th>
                        <th>Selon vous, à quelle fréquence venez vous à la mosquée dans une année ?</th>
                        <th>Que proposez-vous pour améliorer le tabligh en général ?</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for tabligh in tablighs %}
                    <tr>
                        <td>{{ tabligh.id }}</td>
                        <td>{{ tabligh.questionMadressa ? 'Yes' : 'No' }}</td>
                        <td>{{ tabligh.classe }}</td>
                        <td>{{ tabligh.frequentMadressa ? 'Yes' : 'No' }}</td>
                        <td>
                            {% for tabl in tabligh.frequentationMosque %}
                                {{tabl}},
                            {% endfor %}
                        </td>
                        <td>{{ tabligh.questionMosque ? 'Yes' : 'No' }}</td>
                        <td>{{ tabligh.idee }}</td>
                        <td>
                            <a href="{{ path('app_dashboard_tabligh_show', {'id': tabligh.id}) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('app_dashboard_tabligh_edit', {'id': tabligh.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas de donnée</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
