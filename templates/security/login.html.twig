{% extends 'base.html.twig' %} 

{% block title %}Se connecter{% endblock %} 

{% block body %}
<div class="limiter">
  <div
    class="container-login100"
    style="background-image: url('images/bg-01.jpg')"
  >
    <div class="wrap-login100">
      <form class="login100-form validate-form" role="form" method="post">
        <span class="login100-form-logo">
          <i class="zmdi zmdi-landscape"></i>
        </span>

        <span class="login100-form-title p-b-34 p-t-27">Connexion</span>
        {% if error %}
        <div class="alert alert-danger">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}

        <div class="wrap-input100 validate-input" data-validate="Enter email">
          <input
            id="inputEmail"
            class="input100"
            type="email"
            name="email"
            value="{{ last_username }}"
            placeholder="Email"
          />
          <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>

        <div
          class="wrap-input100 validate-input"
          data-validate="Enter password"
        >
          <input
            id="inputPassword"
            class="input100"
            type="password"
            name="password"
            placeholder="Password"
          />
          <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>

        <input
          type="hidden"
          name="_csrf_token"
          value="{{ csrf_token('authenticate') }}"
        />
        <div class="container-login100-form-btn">
          <button class="login100-form-btn">Login</button>
        </div>
        <p class="d-flex justify-content-center"><a href="{{app.request.uri}}recensement">S'inscrire au recensement</a></p>
      </form>
    </div>
  </div>
</div>

<div id="dropDownSelect1"></div>
{% endblock %}
