{% extends 'base.html.twig' %}

{% block title %}Education{% endblock %}

{% block content %}
    <div id="page-inner">   
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-4">DEPARTEMENT EDUCATION</div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                    <a href="{{ path('app_dashboard_education_create') }}" class="btn btn-primary" style="float: right; font-size: x-small;">Ajouter Education</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="font-size: 10px">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>NomEcole</th>
                        <th>NomUniversite</th>
                        <th>Classe</th>
                        <th>CarteEtudiant</th>
                        <th>AdresseEcole</th>
                        <th>AdresseUniversite</th>
                        <th>Diplome</th>
                        <th>AnneeScolaire</th>
                        <th>NomPays</th>
                        <th>Province</th>
                        <th>Region</th>
                        <th>Fokotany</th>
                        <th>NiveauEtude</th>
                        <th>Aide</th>
                        <th>Autre</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for education in education %}
                    <tr>
                        <td>{{ education.id }}</td>
                        <td>{{ education.nomEcole }}</td>
                        <td>{{ education.nomUniversite }}</td>
                        <td>{{ education.classe }}</td>
                        <td>{{ education.carteEtudiant }}</td>
                        <td>{{ education.adresseEcole }}</td>
                        <td>{{ education.adresseUniversite }}</td>
                        <td>{{ education.diplome }}</td>
                        <td>{{ education.anneeScolaire }}</td>
                        <td>{{ education.nomPays ? education.nomPays|join(', ') : '' }}</td>
                        <td>{{ education.province ? education.province|join(', ') : '' }}</td>
                        <td>{{ education.region ? education.region|join(', ') : '' }}</td>
                        <td>{{ education.fokotany }}</td>
                        <td>{{ education.niveauEtude }}</td>
                        <td>{{ education.aide ? 'Yes' : 'No' }}</td>
                        <td>{{ education.autre }}</td>
                        <td>
                            <a href="{{ path('app_dashboard_education_show', {'id': education.id}) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('app_dashboard_education_edit', {'id': education.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="17">Pas de donn√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
