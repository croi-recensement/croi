{% extends 'base.html.twig' %} {% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Modifier Sport</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-6">
                <div class="sub-title">Nom Sport</div>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-6">
                <div class="sub-title">Fréquence</div>
                {{ form_widget(form.frequence, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <div class="sub-title">Aimez vous la lecture ?</div>
                {{ form_widget(form.lecture, {'attr' : {'class': 'radio3 radio-check radio-inline'}}) }}
              </div>
              <div class="form-group col-md-6">
                <div class="sub-title">Personne Rattaché</div>
                {{ form_widget(form.personne, {'attr' : {'class': 'form-control', 'id':'date-evacuation'}}) }}
              </div> 
            </div>
            <div class="row justify-content-md-center">
              <div class="form-group col-md-4">
                <button type="submit" class="btn btn-primary align-self-center">
                  Modifier Sport
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
