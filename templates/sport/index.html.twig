{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %}  
  <div id="page-inner">
      <div class="row">
        {% if labels != null and calculeWithout != null and calculeWiht != null %}
          <div class="col-sm-8" id="boxTab">
        {% else %}
          <div class="col-sm-12" id="boxTab">
        {% endif %}
          <div class="panel panel-default">
            <div class="panel-heading">
             <div class="row">
              <div class="col-md-4">SPORT</div>
              <div class="col-md-4"></div>
              <div class="col-md-4">
                <a href="{{ path('app_dashboard_sport_create') }}"
                   class="btn btn-primary"
                   style="float: right; font-size: x-small;">
                  <i class="fa fa-plus" aria-hidden="true"></i> Ajouter Sport
                </a>
              </div>
            </div>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Nom</th>
                      <th>Prenom</th>
                      <th>Date de naissance</th>
                      <th>Lieu de naissance</th>
                      <th>Nationalite</th>
                      <th>Situation marital</th>
                      <th>Nom sport</th>
                      <th>Frequences</th>
                      <th>Lecture</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for sport in sports %}
                    <tr>
                      <td>{{sport.id}}</td>
                      <td>{{sport.personne.nom}}</td>
                      <td>{{sport.personne.prenom}}</td>
                      <td>{{sport.personne.dateNaissance|date("m/d/Y")}}</td>
                      <td>{{sport.personne.lieuNaissance}}</td>
                      <td>{{sport.personne.nationalite}}</td>
                      <td>{{sport.personne.situationMarital}}</td>
                      <td>{{sport.nom }}</td>
                      <td>{{sport.frequence}}</td>
                      <td>{{sport.lecture == 1 ? "Oui" : "Non"}}</td>
                      {% if is_granted('ROLE_SPORT') %}
                        <th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dashboard_sport_delete', {'id': sport.id}) }}" onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')">
                              <i class="fa fa-trash" style="color:red;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            <a href="{{ path('app_dashboard_sport_edit', {'id': sport.id}) }}">
                              <i class="fa fa-edit" style="color:green;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            {% endif %}
                            <a><i class="fa fa-eye" style="color:sky;" aria-hidden="true"></i></a>
                        </th>
                      {% endif %}
                    </tr>
                  {% endfor %}   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        {# charjs #}
        {% if labels != null and calculeWithout != null and calculeWiht != null %}
        <div class="col-md-4 col-sm-6 col-xs-12 boxChart">  
          <div class="panel panel-default chartJs">
            <div class="panel-heading">
              <div class="card-title">
                <div class="title">Line Chart</div>
              </div>
            </div>
            <div class="panel-body">
              <canvas id="line-chart" class="chart"></canvas>
            </div>
          </div>
        </div>
        {# endcharjs #}
        {% endif %}
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
  <script src="{{ asset('assets/js/Chart.min.js') }}"></script>
  <script>

      $(function() {

        var ctx, data, myLineChart, options;
        Chart.defaults.global.responsive = true;
        ctx = $('#line-chart').get(0).getContext('2d');
        options = {
          scaleShowGridLines: true,
          scaleGridLineColor: "rgba(0,0,0,.05)",
          scaleGridLineWidth: 1,
          scaleShowHorizontalLines: true,
          scaleShowVerticalLines: true,
          bezierCurve: false,
          bezierCurveTension: 0.4,
          pointDot: true,
          pointDotRadius: 4,
          pointDotStrokeWidth: 1,
          pointHitDetectionRadius: 20,
          datasetStroke: true,
          datasetStrokeWidth: 2,
          datasetFill: true,
          //legendTemplate: ""
        };
        data = {
          labels: [0, {% for label in labels %} {{ label }}, {% endfor %}] ,
          datasets: [
            {
              label: "Personne Sport",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#35AD11",
              pointColor: "#35AD11",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in whitSports %} {{ data|number_format }}, {% endfor %}]
            },
            {
              label: "Personne Sans Sport",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#FF0000",
              pointColor: "#FF0000",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in WithoutSports %} {{ data|number_format }}, {% endfor %}]
            }
          ]
        };
        myLineChart = new Chart(ctx).Line(data, options);
      });

  </script>
{% endblock %}