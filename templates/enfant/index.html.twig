{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %}  
<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
          <div class="col-md-4">ENFANT DU MEMBRE</div>
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <a
              href="{{path('app_dashboard_create_child')}}"
              class="btn btn-primary"
              style="float: right; font-size: x-small;"
            >
              Ajouter Enfant
            </a>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="font-size: 10px">
            <thead>
              <tr>
                <th>Id</th>
                <th>NOM FAMILLE</th>
                <th>PRENOM FAMILLE</th>
                <th>DATE NAISSANCE</th>
                <th>LIEU NAISSANCE</th>
                <th>SEXE</th>
                <th>NATIONALITE</th>
                <th>SITUATION MARITAL</th>
                <th>ACTIONS</th>
              </tr>
            </thead>
            <tbody>
              {% for enfant in enfants %}
                <tr>
                    <td>{{enfant.id}}</td>
                    <td>{{enfant.nomFamille}}</td>
                    <td>{{enfant.prenomFamille}}</td>
                    <td>{{enfant.dateNaissance|date('d/m/Y')}}</td>
                    <td>{{enfant.lieuNaissance}}</td>
                    <td>{{enfant.sexe}}</td>
                    <td>
                        {% for n in enfant.nationalite %}
                          <span>{{n}}</span>{{","}}
                        {% endfor %}
                    </td>
                    <td>
                        {% for s in enfant.situationMarital %}
                          {{s}}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="#"><i class="fa fa-trash text-danger"></i></a>
                        <a href="#"><i class="fa fa-pencil-square-o text-primary"></i></a>
                    </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
