{% extends 'base.html.twig' %} 

{% block title %}Ajout Enfant{% endblock %}

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Ajouter Enfant</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-12">
                <div class="sub-title">Parents</div>
                {{ form_widget(form.parent, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <div class="sub-title">Enfant</div>
                {{ form_widget(form.enfant, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="row justify-content-md-center">
              <div class="form-group col-md-4">
                <button type="submit" class="btn btn-primary align-self-center">
                  Ajouter
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
