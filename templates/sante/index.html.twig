{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .clsSante{
    float: right !important;
    font-size: x-small;
  }
</style>
{% endblock %}

{% block title %}{{ title }}{% endblock %} 

{% block content %}
    {% if is_granted("ROLE_SANTE") %}
     <div id="page-inner">
      <div class="row">
        <div class="col-md-7" id="col1">
          <div class="panel panel-default">
            <div class="panel-heading">
            <div class="row">
              <div class="col-md-4">SANTER</div>
              <div class="col-md-4"></div>
              <div class="col-md-4">
                <a
                  href="{{ path('app_dashboard_sante_create') }}"
                  class="btn btn-primary clsSante"
                >
                  Ajouter Santer
                </a>
              </div>
            </div>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Nom Personne</th>
                      <th>Prenom Personne</th>
                      <th>Groupe sanguin</th>
                      <th>Nom maladie</th>
                      <th>Evacuation</th>
                      <th>Chirurgie</th>
                      <th>Nom chirurgie</th>
                      <th>Coût diagnostique</th>
                      <th>Coût evacuation</th>
                      <th>Type</th>
                      <th>Date evacuation</th>
                      <th>Date chirurgie</th>
                      <th>Année</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for maladie in maladies %}
                    <tr>
                      <td>{{maladie.id}}</td>
                      <td>{{maladie.personne.nom}}</td>
                      <td>{{maladie.personne.prenom}}</td>
                      <td>{{maladie.personne.groupSangin}}</td>
                      <td>{{maladie.nom}}</td>
                      <td>{{maladie.evacuation == 1 ? 'Oui' : 'Non'}}</td>
                      <td>{{maladie.chirurgie == 1 ? 'Oui' : 'Non' }}</td>
                      <td>{{maladie.nomChirurgie}}</td>
                      <td>{{maladie.coutDiagnostique}} €</td>
                      <td>{{maladie.coutEvacuation}} €</td>
                      <td>{{maladie.type == 1 ? 'CHRONIQUE' : 'PONCTUELLE' }}</td>
                      <td>{{maladie.dateEvacuation != null ? maladie.dateEvacuation|date("m/d/Y") : 'Non renseigné'}}</td>
                      <td>{{maladie.dateChirurgie != null ? maladie.dateChirurgie|date("m/d/Y") : 'Non renseigné'}}</td>
                      <td>{{maladie.annee}}</td>
                      {% if is_granted('ROLE_SANTE') %}
                        <th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dashboard_sante_delete', {'id': maladie.id}) }}" onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')" style="cursor:pointer;color:red;margin-right: 3px" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                            <a href="{{ path('app_dashboard_sante_edit', {'id': maladie.id}) }}" style="color:green;margin-right: 3px;cursor:pointer"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            {% endif %}
                            <a onClick="showPerson('{{maladie.personne.id}}', '{{ path('app_dashboard_sante_id', {'id': maladie.personne.id}) }}')" data-toggle="modal" data-target="#myModal" style="cursor:pointer"><i class="fa fa-eye" style="color:sky;" aria-hidden="true"></i></a>
                        </th>
                      {% endif %}
                    </tr>
                  {% endfor %}   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        {# charjs #}
        <div class="col-md-5 col-sm-6 col-xs-12" id="col2">  
          <div class="panel panel-default chartJs">
            <div class="panel-heading">
              <div class="card-title">
                <div class="title">Line Chart</div>
              </div>
            </div>
            <div class="panel-body">
              <canvas id="line-chart" class="chart"></canvas>
            </div>
          </div>
        </div>
        {# endcharjs #}
      </div>
    </div>
    {% endif %}

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" onClick="loadFonction()" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Detail de Personne</h4>
          </div>
          <div class="modal-body" id="modal-body">
            
          </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
 <script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/Chart.min.js') }}"></script>
  <script>

      function showPerson(id, pathRoute){
        console.log(id)
        $.ajax({
          type: "POST",
          url: pathRoute,
          data:{ id : id},
          async: true,
          success: function(response){
            var html = '';
            html += '<ul>';
            html += '<th><strong>ID</strong>: '+ response.id +'</th><br />';
            html += '<th><strong>NOM</strong>: '+ response.nom +'</th><br />';
            html += '<th><strong>PRENOM</strong>: '+ response.prenom +'</th><br />';
            html += '<th><strong>DATE DE NAISSANCE</strong>: '+ response.dateNaissance +'</th><br />';
            html += '<th><strong>LIEU DE NAISSANCE</strong>: '+ response.lieuNaissance + '</th><br />';
            html += '<th><strong>NATIONALITE</strong>:  '+ response.nationalite +' </th><br />';
            html += '<th><strong>SITUATION MARITAL</strong> : '+ response.situationMarital +'</th><br />';
            html += '<th><strong>GROUPE SANGUIN</strong> : '+ response.groupSangin +'</th><br />';
            html += '<th><strong>PAYS D\'ORIGINE</strong> : '+ response.paysOrigin +'</th><br />';
            html += '<th><strong>SEXE</strong> : '+ response.sexe +'</th>';
            $("#modal-body").html(html);
          }
        })
      }

      $(function() {

        var ctx, data, myLineChart, options;
        Chart.defaults.global.responsive = true;
        ctx = $('#line-chart').get(0).getContext('2d');
        options = {
          scaleShowGridLines: true,
          scaleGridLineColor: "rgba(0,0,0,.05)",
          scaleGridLineWidth: 1,
          scaleShowHorizontalLines: true,
          scaleShowVerticalLines: true,
          bezierCurve: false,
          bezierCurveTension: 0.4,
          pointDot: true,
          pointDotRadius: 4,
          pointDotStrokeWidth: 1,
          pointHitDetectionRadius: 20,
          datasetStroke: true,
          datasetStrokeWidth: 2,
          datasetFill: true,
          //legendTemplate: ""
        };
        data = {
          labels: [0, {% for label in labels %} {{ label }}, {% endfor %}] ,
          datasets: [
            {
              label: "Personne Malade",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#35AD11",
              pointColor: "#35AD11",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in calculeWithout %} {{ data|number_format }}, {% endfor %}]
            },
            {
              label: "Personne Santer",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#FF0000",
              pointColor: "#FF0000",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in calculeWiht %} {{ data|number_format }}, {% endfor %}]
            }
          ]
        };
        myLineChart = new Chart(ctx).Line(data, options);
      });

       $(document).ready(function () {
		    $("#sideNav").click(function(){
          if($(this).hasClass('closed')){
            $( "#col1" ).removeClass( "col-md-12" ).addClass( "col-md-7" );
            $("#col2").show()
          }else{
            $( "#col1" ).removeClass( "col-md-7" ).addClass( "col-md-12" );
            $("#col2").hide()
          }
        });
      });

  </script>
{% endblock %}