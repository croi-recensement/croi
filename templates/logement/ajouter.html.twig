{% extends 'base.html.twig' %} 

{% block title %}Ajout Logement{% endblock %}

{% block content %}
<div id="page-inner">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="card-title">
                <div class="title">Ajouter Logement</div>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="panel-body">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="exampleInputPermanente">Adresse Permanente :</label>
                        {{ form_widget(form.adressePermanente, {'attr' : {'class': 'form-control', 'id': 'exampleInputPermanente'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                        <label for="exampleInputTemporaire">Adresse Temporaire :</label>
                        {{ form_widget(form.adresseTemporaire, {'attr' : {'class': 'form-control', 'id': 'exampleInputTemporaire'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                        <label for="exampleInputEmail">Adresse Email :</label>
                        {{ form_widget(form.adresseEmail, {'attr' : {'class':'form-control', 'id': 'exampleInputEmail'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                      <label for="exampleInputSyndic">Montant syndic :</label>
                      {{ form_widget(form.montantSyndic, {'attr' : {'class':'form-control', 'id': 'exampleInputSyndic'}}) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="exampleInputProprietaire">Vous êtes propriétaire :</label>
                        {{ form_widget(form.proprietaireounon, {'attr' : {'class':'form-control', 'id': 'exampleInputProprietaire'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                      <label for="exampleInputAlloue">Vous avez un ou plusieurs maison alloué :</label>
                      {{ form_widget(form.maisonalloueounon, {'attr' : {'class':'form-control', 'id': 'exampleInputAlloue'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                      <label for="exampleInputLoyer">Montant loyé :</label>
                      {{ form_widget(form.montantLoyer, {'attr' : {'class':'form-control', 'id': 'exampleInputLoyer'}}) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                      <label for="exampleInputPays">Pays :</label>
                      {{ form_widget(form.nomPays, {'attr' : {'class':'form-control', 'id': 'exampleInputPays'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                      <label for="exampleInputProvince">Province :</label>
                      {{ form_widget(form.province, {'attr' : {'class':'form-control', 'id': 'exampleInputProvince'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                        <label for="exampleInputRegion">Region :</label>
                        {{ form_widget(form.region, {'attr' : {'class':'form-control', 'id': 'exampleInputRegion'}}) }}
                    </div>
                    <div class="form-group col-md-3">
                        <label for="exampleInputFokotany">Fokotany :</label>
                        {{ form_widget(form.fokotany, {'attr' : {'class':'form-control', 'id': 'exampleInputFokotany'}}) }}
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-primary text-center">Ajouter Logement</button>
                </div>
            </form>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
