{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %}  
  <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
              <div class="col-md-4">LOGEMENT</div>
              <div class="col-md-4"></div>
              <div class="col-md-4">
                <a
                  href="{{ path('app_dashboard_logement_create') }}"
                  class="btn btn-primary"
                >
                  Ajouter Logement
                </a>
              </div>
            </div>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Nom</th>
                      <th>Prenom</th>
                      <th>Date de naissance</th>
                      <th>Lieu de naissance</th>
                      <th>Nationalite</th>
                      <th>Situation marital</th>
                      <th>Proprietaire</th>
                      <th>Adresse permanente</th>
                      <th>Adresse Temporaire</th>
                      <th>Ville</th>
                      <th>Code postal</th>
                      <th>Province</th>
                      <th>Region</th>
                      <th>Maison allou√©</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for logement in logements %}
                    <tr>
                      <td>{{logement.id}}</td>
                      <td>{{logement.personne.nom}}</td>
                      <td>{{logement.personne.prenom}}</td>
                      <td>{{logement.personne.dateNaissance|date("m/d/Y")}}</td>
                      <td>{{logement.personne.lieuNaissance}}</td>
                      <td>{{logement.personne.nationalite}}</td>
                      <td>{{logement.personne.situationMarital}}</td>
                      <td>{{ logement.Proprietaire == 1 ? 'Oui' : 'Non' }}</td>
                      <td>{{logement.adressePermanente}}</td>
                      <td>{{logement.adresseTemporaire}}</td>
                      <td>{{logement.ville}}</td>
                      <td>{{logement.codePostale}}</td>
                      <td>{{logement.province}}</td>
                      <td>{{logement.region}}</td>
                      <td>{{logement.maisonAllouer == 1 ? 'Oui' : 'Non' }}</td>
                      {% if is_granted('ROLE_LOGEMENT') %}
                        <th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dashboard_logement_delete', {'id': logement.id}) }}" onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')">
                              <i class="fa fa-trash" style="color:red;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            <a href="{{ path('app_dashboard_logement_edit', {'id': logement.id}) }}">
                              <i class="fa fa-edit" style="color:green;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            {% endif %}
                            <a><i class="fa fa-eye" style="color:sky;" aria-hidden="true"></i></a>
                        </th>
                      {% endif %}
                    </tr>
                  {% endfor %}   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
