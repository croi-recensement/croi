{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %}  
  <div id="page-inner">
      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
              <div class="col-md-4">LOGEMENT</div>
              <div class="col-md-4"></div>
              <div class="col-md-4">
                <a
                  href="{{ path('app_dashboard_logement_create') }}"
                  class="btn btn-primary clsSante"
                  style="float:right;font-size: x-small;"
                >
                  Ajouter Logement
                </a>
              </div>
            </div>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Nom</th>
                      <th>Prenom</th>
                      <th>Date de naissance</th>
                      <th>Lieu de naissance</th>
                      <th>Nationalite</th>
                      <th>Situation marital</th>
                      <th>Proprietaire</th>
                      <th>Adresse permanente</th>
                      <th>Adresse Temporaire</th>
                      <th>Ville</th>
                      <th>Code postal</th>
                      <th>Province</th>
                      <th>Region</th>
                      <th>Maison allou√©</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for logement in logements %}
                    <tr>
                      <td>{{logement.id}}</td>
                      <td>{{logement.personne.nom}}</td>
                      <td>{{logement.personne.prenom}}</td>
                      <td>{{logement.personne.dateNaissance|date("m/d/Y")}}</td>
                      <td>{{logement.personne.lieuNaissance}}</td>
                      <td>{{logement.personne.nationalite}}</td>
                      <td>{{logement.personne.situationMarital}}</td>
                      <td>{{ logement.Proprietaire == 1 ? 'Oui' : 'Non' }}</td>
                      <td>{{logement.adressePermanente}}</td>
                      <td>{{logement.adresseTemporaire}}</td>
                      <td>{{logement.ville}}</td>
                      <td>{{logement.codePostale}}</td>
                      <td>{{logement.province}}</td>
                      <td>{{logement.region}}</td>
                      <td>{{logement.maisonAllouer == 1 ? 'Oui' : 'Non' }}</td>
                      {% if is_granted('ROLE_LOGEMENT') %}
                        <th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dashboard_logement_delete', {'id': logement.id}) }}" onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')">
                              <i class="fa fa-trash" style="color:red;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            <a href="{{ path('app_dashboard_logement_edit', {'id': logement.id}) }}">
                              <i class="fa fa-edit" style="color:green;margin-right: 3px" aria-hidden="true"></i>
                            </a>
                            {% endif %}
                            <a onClick="showLogement('{{logement.id}}', '{{ path('app_dashboard_sante_id', {'id': logement.id}) }}')" data-toggle="modal" data-target="#myModal" style="cursor:pointer"><i class="fa fa-eye" style="color:sky;" aria-hidden="true"></i></a>
                        </th>
                      {% endif %}
                    </tr>
                  {% endfor %}   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        {# charjs #}
        <div class="col-md-4 col-sm-6 col-xs-12" id="col2">  
          <div class="panel panel-default chartJs">
            <div class="panel-heading">
              <div class="card-title">
                <div class="title">Line Chart</div>
              </div>
            </div>
            <div class="panel-body">
              <canvas id="line-chart" class="chart"></canvas>
            </div>
          </div>
        </div>
        {# endcharjs #}
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
  <script src="{{ asset('assets/js/Chart.min.js') }}"></script>
  <script>
    $(function() {
        var ctx, data, myLineChart, options;
        Chart.defaults.global.responsive = true;
        ctx = $('#line-chart').get(0).getContext('2d');
        options = {
          scaleShowGridLines: true,
          scaleGridLineColor: "rgba(0,0,0,.05)",
          scaleGridLineWidth: 1,
          scaleShowHorizontalLines: true,
          scaleShowVerticalLines: true,
          bezierCurve: false,
          bezierCurveTension: 0.4,
          pointDot: true,
          pointDotRadius: 4,
          pointDotStrokeWidth: 1,
          pointHitDetectionRadius: 20,
          datasetStroke: true,
          datasetStrokeWidth: 2,
          datasetFill: true,
          //legendTemplate: ""
        };
        data = {
          labels: [0, {% for label in labels %} {{ label }}, {% endfor %} ] ,
          datasets: [
            {
              label: "Personne Avoir Logement",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#35AD11",
              pointColor: "#35AD11",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in proprietaires %} {{ data|number_format }}, {% endfor %} ]
            },
            {
              label: "Personne Sans Logement",
              fillColor: "rgba(26, 188, 156,0.2)",
              strokeColor: "#FF0000",
              pointColor: "#FF0000",
              pointStrokeColor: "#fff",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "#1ABC9C",
              data: [0, {% for data in locataires %} {{ data|number_format }}, {% endfor %}]
            }
          ]
        };
        myLineChart = new Chart(ctx).Line(data, options);
      });
  </script>
{% endblock %}
