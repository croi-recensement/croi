{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .btnEducat{
    text-align: center;
  }
  .btnAjout{
    display: flex;
    justify-content: center;
  }
</style>
{% endblock %}

{% block title %}Edit Personne{% endblock %} 

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Editer Personne</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Nom</div>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Prénom</div>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Date de Naissance</div>
                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Lieu de Naissance</div>
                {{ form_widget(form.lieuNaissance, {'attr': {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row">
            <div class="form-group col-md-3">
                <div class="sub-title">Sexe</div>
                {{ form_widget(form.sexe, {'attr' : {'class': 'radio3 radio-check radio-inline'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Nationalité</div>
                {{ form_widget(form.nationalite, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Situation Marital</div>
                {{ form_widget(form.situationMarital, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Spécialité</div>
                {{ form_widget(form.specialite, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-4">
                <div class="sub-title">Situation Professionnel</div>
                {{ form_widget(form.situationProfessionnel, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-4">
                <div class="sub-title">Groupe Sanguin</div>
                {{ form_widget(form.groupSangin, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-4">
                <div class="sub-title">Pays d'Origine</div>
                {{ form_widget(form.paysOrigin, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row btnAjout">
              <div class="form-group col-md-4 btnEducat">
                <button type="submit" class="btn btn-warning btn-block">
                  Editer Personne
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
