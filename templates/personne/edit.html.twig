{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .btnEducat{
    text-align: center;
    margin-top: 15px;
  }
  .btnAjout{
    display: flex;
    justify-content: center;
  }
</style>
{% endblock %}

{% block title %}Ajout Personne{% endblock %} 

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Edit Personne</div>
          </div>
        </div>
        {{ form_start(form, { 'attr': {'autocomplete': 'off'} }) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Nom</div>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Prénom</div>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Lieu de Naissance</div>
                {{ form_widget(form.lieuNaissance, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Date de Naissance</div>
                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Nationalité</div>
                {{ form_widget(form.nationalite, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Situation Marital</div>
                {{ form_widget(form.situationMarital, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Sexe</div>
                {{ form_widget(form.sexe, {'attr' : {'class': 'radio3 radio-check radio-inline'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">CIN</div>
                {{ form_widget(form.cin, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Autre Nationalité</div>
                {{ form_widget(form.AutreNationalite, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Phone</div>
                {{ form_widget(form.phone, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Passport</div>
                {{ form_widget(form.passport, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Numéro Passport</div>
                {{ form_widget(form.numeroPassport, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Numéro CIN</div>
                {{ form_widget(form.numeroCin, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Nombre d'Enfant</div>
                {{ form_widget(form.nbrEnfant, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row btnAjout">
              <div class="form-group col-md-4 btnEducat mt-5">
                <button type="submit" class="btn btn-success btn-block">
                  Ajouter
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
