{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %} {% if is_granted('ROLE_ADMIN') %}
<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-4">Apropos du Personne</div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <a
                href="{{ path('app_dashboard_admin_create') }}"
                class="btn btn-primary clsSante"
                style="float:right; font-size: x-small;"
              >
                Ajouter Personne
              </a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table
              class="table table-striped table-bordered table-hover"
              id="dataTables-example"
            >
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Nom</th>
                  <th>Prenom</th>
                  <th>Lieu de naissance</th>
                  <th>Date de naissance</th>
                  <th>Nationalite</th>
                  <th>Numéro CIN</th>
                  <th>Numéro Téléphone</th>
                  <th>Document Voyage</th>
                  <th>Numéro Passport</th>
                  <th>Situation marital</th>
                  <th>Nombre Enfant</th>
                  <th>Hiérarchie</th>
                  <th>ACTION</th>
                </tr>
              </thead>
              <tbody>
                {% for person in personnes %}
                <tr>
                  <td>{{ person.id }}</td>
                  <td>{{ person.nom }}</td>
                  <td>{{ person.prenom }}</td>
                  <td>{{ person.lieuNaissance }}</td>
                  <td>{{ person.dateNaissance|date('m/d/Y') }}</td>
                  <td>{{ person.nationalite }}</td>
                  <td>{{ person.numeroCin }}</td>
                  <td>{{ person.numeroTelephone }}</td>
                  <td>{{ person.documentVoyage }}</td>
                  <td>{{ person.numeroPassport }}</td>
                  <td>{{ person.situationMarital }}</td>
                  <td>{{ person.nombreEnfant }}</td>
                  <td>{{ person.hierarchie }}</td>
                  <th>
                    <a href="{{ path('app_dashboard_admin_delete', {'id': person.id}) }}" style="cursor:pointer"
                      onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')"
                      ><i
                        class="fa fa-trash"
                        style="color: red; margin-right: 5px"
                        aria-hidden="true"
                      ></i
                    ></a>
                    <a href="{{ path('app_dashboard_admin_edit', {'id': person.id}) }}" style="cursor:pointer"
                      ><i
                        class="fa fa-edit"
                        style="color: green"
                        aria-hidden="true"
                      ></i
                    ></a>
                  </th>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %} {% endblock %}
