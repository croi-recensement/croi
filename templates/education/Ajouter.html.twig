                        <div class="form-group col-md-3">
                            <label for="exampleInputRegion">Region :</label>
                            {{ form_widget(form.region, {'attr' : {'class': 'form-control', 'id': 'exampleInputRegion', 'aria-describedby': 'regionHelp'}}) }}
                            <small id="regionHelp" class="form-text text-muted">*Champ region vide</small>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="exampleInputFokotany">Fokotany :</label>
                            {{ form_widget(form.fokotany, {'attr' : {'class': 'form-control', 'id': 'exampleInputFokotany', 'aria-describedby': 'fokotanyHelp'}}) }}
                            <small id="fokotanyHelp" class="form-text text-muted">*Champ fokotany vide</small>
                        </div>
                    </div>
                    <div class="form-row">
                        <button type="submit" class="btn btn-primary text-center">Ajouter Education</button>
                    </div>
                </form>
            </div>
        {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
