{% extends 'base.html.twig' %} 

{% block title %}{{ title }}{% endblock %} 

{% block content %}
{% if is_granted('ROLE_COMMERCE') %} 
  <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-4">FINANCE</div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
                  <a
                    href="{{ path('app_dashboard_finance_create') }}"
                    class="btn btn-primary"
                    style="float: right; font-size: x-small;"
                  >
                    Ajouter Finance
                  </a>
                </div>    
              </div>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>NOM</th>
                      <th>PRENOM</th>
                      <th>NATIONALITE</th>
                      <th>DATE NAISSANCE</th>
                      <th>PAYS ORIGINE</th>
                      <th>SALAIRE</th>
                      <th>PRIME DE GRATIFICATION</th>
                      <th>LOYER</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for finance in finances %}
                    <tr>
                      <td>{{finance.id}}</td>
                      <td>{{finance.personne.nom}}</td>
                      <td>{{finance.personne.prenom}}</td>
                      <td>{{finance.personne.nationalite}}</td>
                      <td>{{finance.personne.dateNaissance|date("m/d/Y")}}</td>
                      <td>{{finance.personne.paysOrigin}}</td>
                      <td>{{finance.salaire }} Ar</td>
                      <td>{{finance.primeGratification }}</td>
                      <td>{{finance.loyer}}</td>
                      {% if is_granted('ROLE_FINANCE') %}
                        <th>
                            {% if is_granted('ROLE_ADMIN') %}
                              <a href="{{ path('app_dashboard_finance_delete', {'id': finance.id}) }}" onClick="return confirm('Voulez-vous supprimer vraiment cette ligne ??')">
                                <i class="fa fa-trash" style="color:red;margin-right: 5px" aria-hidden="true"></i>
                              </a>
                              <a href="{{ path('app_dashboard_finance_edit', {'id': finance.id}) }}">
                                <i class="fa fa-edit" style="color:green;" aria-hidden="true"></i>
                              </a>
                            {% endif %}
                            <a><i class="fa fa-eye" style="color:sky;" aria-hidden="true"></i></a>
                        </th>
                      {% endif %}
                    </tr>
                  {% endfor %}   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}