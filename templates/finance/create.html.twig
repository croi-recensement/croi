{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .btnSport{
    text-align: center;
  }
  .btnAjout{
    display: flex;
    justify-content: center;
  }
</style>
{% endblock %}

{% block title %}Ajout Finance{% endblock %}

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Ajouter Finance</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-12">
                <div class="sub-title">Salaire</div>
                {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <div class="sub-title">Prime</div>
                {{ form_widget(form.primeGratification, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <div class="sub-title">Loyer</div>
                {{ form_widget(form.loyer, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-6">
                <div class="sub-title">Personne Ratach√©</div>
                {{ form_widget(form.personne, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row btnAjout">
              <div class="form-group col-md-4 btnSport">
                <button type="submit" class="btn btn-success btn-block">
                  Ajouter
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
