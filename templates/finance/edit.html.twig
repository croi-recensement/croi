<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Modifier Finance</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-12">
                <div class="sub-title">Salaire</div>
                {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
