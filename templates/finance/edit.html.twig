            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <div class="sub-title">Loyer</div>
                {{ form_widget(form.loyer, {'attr' : {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-6">
                <div class="sub-title">Personne Ratach√©</div>
                {{ form_widget(form.personne, {'attr' : {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row justify-content-md-center">
              <div class="form-group col-md-4">
                <button type="submit" class="btn btn-primary align-self-center">
                  Modifier Finance
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
