{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .btnEducat{
    text-align: center;
  }
  .btnAjout{
    display: flex;
    justify-content: center;
  }
</style>
{% endblock %}

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Ajouter Social</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">condition Rsa</div>
                {{ form_widget(form.conditionRsa, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">RSA JeuneActif</div>
                {{ form_widget(form.rsaJeuneActif, {'attr': {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">prime Activite</div>
                {{ form_widget(form.primeActivite, {'attr': {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">garantie Jeunes</div>
                {{ form_widget(form.garantieJeunes, {'attr': {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">Prime Transitoire Solidarite</div>
                {{ form_widget(form.primeTransitoireSolidarite, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Aide Financiere Paiement Facture Eau</div>
                {{ form_widget(form.aideFinancierePaiementFactureEau, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">prestation Familiales</div>
                {{ form_widget(form.prestationFamiliales, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Bourse Primaire Lycée</div>
                {{ form_widget(form.boursePrimaireLycee, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3">
                <div class="sub-title">garantie Visale</div>
                {{ form_widget(form.garantieVisale, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Aide Paiement Telephone et Internet</div>
                {{ form_widget(form.aidePaiementTelephoneInternet, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">allocation Solidarite PersonneAgee</div>
                {{ form_widget(form.allocationSolidaritePersonneAgee, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
              <div class="form-group col-md-3">
                <div class="sub-title">Protection Maladie Et Medicament</div>
                {{ form_widget(form.protectionMaladieEtMedicament, {'attr' : {'class': 'form-control'

                }}) }}
              </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <div class="sub-title">complementaire Santé</div>
                        {{ form_widget(form.complementaireSante, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-3">
                    <div class="sub-title">Année</div>
                        {{ form_widget(form.annee, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-3">
                    <div class="sub-title">Personne Rattaché</div>
                        {{ form_widget(form.personne, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-3">
                    <div class="sub-title">Son Salaire</div>
                        {{ form_widget(form.finance, {'attr' : {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row btnAjout">
              <div class="form-group col-md-4 btnEducat">
                <button type="submit" class="btn btn-success btn-block">
                  Ajouter Social
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
