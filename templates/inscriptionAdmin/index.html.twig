{% extends 'base.html.twig' %} 

{% block title %}{% endblock %}

{% block stylesheets %}
    <style>
    body{
        overflow: hidden;
    }
    .wrapper {
        background: #fff;
        width: 450px;
        margin: auto;
        border-radius: 16px;
        box-shadow: 0 0 128px 0 rgba(0, 0, 0, 0.1),
        0 32px 64px -48px rgba(0, 0, 0, 0.5);
    }
    .form {
        padding: 25px 30px;
    }
    .form header {
        font-size: 20px;
        font-weight: 600;
        padding-bottom: 10px;
        border-bottom: 1px solid #e6e6e6;
    }
    .form form {
        margin: 20px 0;
    }
    .form form .error-txt {
        color: #721c24;
        background: #f8d7da;
        padding: 8px 10px;
        text-align: center;
        border-radius: 5px;
        margin-bottom: 10px;
        border: 1px solid #f5c6cb;
        display: none;
    }
    .form form .name-details {
        display: flex;
    }
    form .name-details .field:first-child {
        margin-right: 10px;
    }
    form .name-details .field:last-child {
        margin-left: 10px;
    }
    .form form .image input {
        font-size: 17px;
    }
    .form form .bouton input {
        margin-top: 13px;
        height: 45px;
        border: none;
        font-size: 17px;
        font-weight: 200;
        background: #333;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
    }
    .form form .field i {
        position: absolute;
        right: 15px;
        color: #ccc;
        top: 70%;
        transform: translateY(-50%);
        cursor: pointer;
    }
    .form form .field i.active::before {
        color: #333;
        content: "\f070";
    }
    .form form .field label {
        margin-bottom: 2px;
    }
    .form form .field {
        display: flex;
        position: relative;
        flex-direction: column;
        margin-bottom: 10px;
    }
    .form form .field input {
        outline: none;
    }
    .form form .input input {
        height: 40px;
        width: 100%;
        font-size: 16px;
        padding: 0 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .form .link {
        text-align: center;
        margin: 10px 0;
        font-size: 17px;
    }
    .form .link a {
        color: #333;
    }
    .form .link a:hover {
        text-decoration: underline;
    }
    </style>
{% endblock %}

{% block content %}
    <div class="wrapper">
      <section class="form signup">
        <header>INSCRIPTION POUR LES DEPARTEMENTS</header>
        <form action="#">
          <div class="error-txt"></div>
          <div class="name-details">
            <div class="field input">
              <label for="">NOM :</label>
              <input type="text" placeholder="votre nom" />
            </div>
            <div class="field input">
              <label for="">PRENOM :</label>
              <input type="text" placeholder="votre prénom" />
            </div>
          </div>
          <div class="field input">
            <label for="">EMAIL :</label>
            <input type="email" placeholder="entré votre email" />
          </div>
          <div class="field input">
            <label for="">PASSWORD :</label>
            <input type="password" placeholder="entré votre password" />
            <i class="fa fa-eye"></i>
          </div>
          <div class="field image">
            <label for="">IMAGE :</label>
            <input type="file" placeholder="entré votre password" />
          </div>
          <div class="field bouton">
            <input type="submit" value="INSCRIPTION" />
          </div>
        </form>
      </section>
    </div>
{% endblock %}