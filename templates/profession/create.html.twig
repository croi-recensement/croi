{% extends 'base.html.twig' %} 

{% block stylesheets %}
<style>
  .btnEducat{
    text-align: center;
  }
  .btnAjout{
    display: flex;
    justify-content: center;
  }
</style>
{% endblock %}

{% block title %}Ajout commerce{% endblock %}

{% block content %}
<div id="page-inner">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="card-title">
            <div class="title">Ajouter Commerce</div>
          </div>
        </div>
        {{ form_start(form) }}
        <div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-4">
                <div class="sub-title">Domaine d'activité</div>
                {{ form_widget(form.domaineActivite, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-4">
                <div class="sub-title">Fréquence</div>
                {{ form_widget(form.personne, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group col-md-4">
                <div class="sub-title">Etes vous ?</div>
                {{ form_widget(form.commerce, {'attr' : {'class': 'radio3 radio-check radio-inline'}}) }}
              </div>
            </div>
            <div class="row btnAjout">
              <div class="form-group col-md-4 btnEducat">
                <button type="submit" class="btn btn-success btn-block">
                  Ajouter Commerce
                </button>
              </div>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
